<odoo>
    <record id="view_design_dropdown_option_form" model="ir.ui.view">
    <field name="name">design.dropdown.option.form</field>
    <field name="model">dropdown_option</field>
    <field name="arch" type="xml">
        <form string="Design Dropdown Option">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="option_type"/>
                </group>
            </sheet>
        </form>
    </field>
    </record>

    <record id="view_design_dropdown_option_tree" model="ir.ui.view">
    <field name="name">design.dropdown.option.tree</field>
    <field name="model">dropdown_option</field>
    <field name="arch" type="xml">
        <tree string="Design Dropdown Option">
            <field name="name"/>
            <field name="option_type"/>
        </tree>
    </field>
    </record>






